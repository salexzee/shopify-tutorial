
<section class="password-signup" style="background-image: url({{ bg_image | img_url: 'master' }})">
  <div class="password-signup__inner">
    <h2 class="password-signup__headline">{{ headline }}</h2>

    {% unless shop.password_message == blank %}
      <p class="password-signup__message">
        {{ shop.password_message }}
      </p>
    {% endunless %}

    {% form 'customer', class: 'password-signup__form' %}

      {{ form.errors | default_errors }}

      {% if form.posted_successfully? %}
        <ul class="form-success">
          <li>{{ 'general.password_page.signup_form_success' | t }}</li>
        </ul>
      {% else %}
        <h4>{{ 'general.password_page.signup_form_heading' | t }}</h4>
        <input type="hidden" name="contact[tags]" value="prospect, password page">

        <input type="email"
          name="contact[email]"
          id="Email"
          spellcheck="false"
          autocomplete="off"
          autocapitalize="off"
          class="email__input"
          placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}">
        <button type="submit" name="commit" class="button">
          {{ 'general.password_page.signup_form_submit' | t }}
        </button>
      {% endif %}
    {% endform %}
  </div>
</section>